  <h3>Tasks</h3>
  <ul class="list-group list-group-flush">
    <% @tasks.each do |task| %>
      <li class="list-group-item">
        <%= link_to task.title , task_path(task), class:"text-decoration-none text-secondary" %>
        <%= link_to task_path(task),
        class:"text-decoration-none text-secondary",
        method: :delete,
        data: { confirm: "Are you sure?" } do%>
          <i class="far fa-trash-alt"></i>
        <% end %>
      </li>
    <% end %>
  </ul>

  <div>
    <%= link_to new_task_path, class:"d-flex text-decoration-none text-primary align-items-center" do%>
      <i class="fas fa-plus"></i>
       Add a new task
    <% end %>
  </div>
